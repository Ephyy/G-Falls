---
import CommandLineText from "../components/CommandLineText.astro";
import UserPrompts from "../components/terminal/UserPrompts";
import TerminalLayout from "../layouts/TerminalLayout.astro";

export const prerender = "false";
---

<TerminalLayout>
  <div id="terminal" class="terminal" class="no-wrap">
    <CommandLineText />
    <UserPrompts client:visible />
  </div>
</TerminalLayout>

<style>
  /* Decrease the font size for the terminal on smaller screens */

  .terminal {
    height: 100%;

    display: flex;
    flex-direction: column;

    padding: 0.5rem;

    font-size: 1rem;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .terminal {
      font-size: 0.6rem;
      font-weight: bolder;
    }
  }
</style>

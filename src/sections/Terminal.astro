---
import CommandLineText from "../components/CommandLineText.astro";
---

<section>
  <div id="terminal" class="p-2" onclick="">
    <CommandLineText />
    <div class="flex mt-2">
      <div>
        <span class="text-green-500">v@localhost</span><span>:</span><span
          class="text-fuchsia-600">/root</span
        >
        <span>#</span>
      </div>
      <div>
        <input
          type="text"
          id="user-input"
          class="user-input text-zinc-50 bg-transparent ml-2"
          spellcheck="false"
          autocomplete="off"
        />
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    const userInput = document.getElementById("user-input");
    const terminal = document.getElementById("terminal");

    userInput?.focus();

    terminal?.addEventListener("click", () => {
      userInput.focus();
    });
  });
</script>

<style>
  body {
    color: #fafafa;
    font-family: Hack;
    font-weight: 700;
  }

  .user-input {
    min-width: 1ch;
    border: none;
    outline: none;
    background-color: transparent;
  }
</style>
